<header>
    <h1>
        Eat That Burger!!
    </h1>
</header>

<div class="row">
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgerItem devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>

    <h2>Burgers You Ate </h2>

    <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burgerItem devoured=false}}
        {{/if}}
        {{/each}}
    </ul>

</div>


<h2>Add a Cat</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Cat Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="slee">Sleepy?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
        <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add Cat</button>
</form>







